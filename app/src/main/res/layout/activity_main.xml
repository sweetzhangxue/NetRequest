<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.sweet_xue.netrequest.MainActivity">


    <Button
            android:id="@+id/btn_request_http"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="点击触发网络请求HttpURLConnection"/>
    <Button
            android:id="@+id/btn_request_okhttp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_request_http"
            android:text="点击触发网络请求OkHttp"/>
    <TextView
            android:id="@+id/tv_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:layout_below="@id/btn_request_okhttp"/>
</RelativeLayout>
